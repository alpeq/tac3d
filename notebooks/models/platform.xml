<mujoco model="platform">
  <option solver="CG" tolerance="1e-6"/>
    
  <default>
    <default class="platform">
      <material specular="0.5" shininess="0.25"/>
    </default>
  </default>

  <size nconmax="500" njmax="5000" nstack="5000000"/>
    
  <asset>
    <!-- Collision meshes -->
    <mesh name="rotational_platform" file="rotational_platform.obj"/>
    <mesh name="rotator_wedge" file="rotator_wedge.obj"/>
    <mesh name="rotator_round" file="rotator_round.obj"/>
    <mesh name="rotator_sharp" file="rotator_sharp.obj"/>  
  </asset>

  <worldbody>
    <body name="rotator_platform" pos=".6 0 .01" euler="1.570796 1.570796 0" childclass="platform">
      <inertial mass="4.970684" pos="0 0 0"
            fullinertia="0.70337 0.70661 0.0091170 -0.00013900 0.0067720 0.019169"/>
      <geom mesh="rotational_platform" size=".1 .1 .1" rgba=".5 .5 .5 1" class="visual"/>
      <body name="rotator1" pos="0.25 .05 0" euler="0 0 0">
        <joint axis="0 1 0"name="joint8"/>
        <geom mesh="rotator_sharp" rgba="0 0 .8 1" class="visual"/>
        <geom mesh="rotator_sharp" class="collision"/>
        <site name="reach_site1" pos="0 .11 0" quat="0 0 0 0" group="4"/>
      </body>
      <body name="rotator2" pos="0 .05 0" euler="0 0 0">
        <joint axis="0 1 0" name="joint9"/>
        <geom mesh="rotator_round" rgba="0 .8 0 1" class="visual"/>
        <geom mesh="rotator_round" class="collision"/>
        <site name="reach_site2" pos="0 .11 0" quat="0 0 0 0" group="4"/>
      </body>
      <body name="rotator3" pos="-.25 .05 0" euler="0 0 0">
        <joint axis="0 1 0" name="joint10"/>
        <geom mesh="rotator_wedge" rgba=".8 0 0 1" class="visual"/>
        <geom mesh="rotator_wedge" class="collision"/>
        <site name="reach_site3" pos="0 .11 0" quat="0 0 0 0" group="4"/>
      </body>
    </body>
  </worldbody>
    
  <actuator>
    <position class="platform" name="rotator1" joint="joint8"/>
    <position class="platform" name="rotator2" joint="joint9"/>
    <position class="platform" name="rotator3" joint="joint10"/>
  </actuator>
</mujoco>
